            "type": "bool",
            "notStorable": true,
            "mergeDisabled": true,
            "select": {
                "select": "accountContact.isInactive",
                "leftJoins": [
                    [
                        "AccountContact",
                        "accountContact",
                        {
                            "contact.id:": "accountContact.contactId",
                            "contact.accountId:": "accountContact.accountId",
                            "accountContact.deleted": false
                        }
