            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam"
        },
        "contacts": {
            "type": "hasMany",
            "entity": "Contact",
            "foreign": "account"
        },
        "opportunities": {
            "type": "hasMany",
            "entity": "Opportunity",
            "foreign": "account"
        },
        "cases": {
