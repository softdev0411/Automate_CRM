{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true
        },
        "status": {
            "type": "enum",
            "options": ["Active", "Inactive"]
        },
        "host": {
            "type": "varchar",
            "required": true
        },
        "port": {
            "type": "varchar",
            "default": "143",
            "required": true
        },
        "ssl": {
            "type": "bool"
        },
        "username": {
            "type": "varchar",
            "required": true
        },
        "password": {
            "type": "password"
        },
        "monitoredFolders": {
            "type": "varchar",
            "required": true,
            "default": "INBOX",
            "view": "Crm:InboundEmail.Fields.Folders"
        },
        "trashFolder": {
            "type": "varchar",
            "required": true,
            "view": "Crm:InboundEmail.Fields.Folder"
        },
        "assignToUser": {
            "type": "link",
            "tooltip": true
        },
        "team": {
            "type": "link",
            "tooltip": true
        },
        "createCase": {
            "type": "bool",
            "tooltip": true
        },
        "caseDistribution": {
            "type": "enum",
            "options": ["Direct-Assignment", "Round-Robin", "Least-Busy"],
            "default": "Direct-Assignment",
            "tooltip": true
        },
        "reply": {
            "type": "bool",
            "tooltip": true
        },
        "replyEmailTemplate": {
            "type": "link"
        },
        "replyFromAddress": {
            "type": "varchar"
        },
        "replyToAddress": {
            "type": "varchar",
            "tooltip": true
        },
        "replyFromName": {
            "type": "varchar"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignToUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "team": {
            "type": "belongsTo",
            "entity": "Team"
        },
        "replyEmailTemplate": {
            "type": "belongsTo",
            "entity": "EmailTemplate"
        }
    },
    "collection": {
    	"sortBy": "name",
    	"asc": true
    }
}
