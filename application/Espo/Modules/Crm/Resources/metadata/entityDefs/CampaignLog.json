        "actionDate": {
            "type": "datetime",
            "required": true
        },
        "data": {
            "type": "jsonObject"
        },
        "application": {
            "type": "varchar",
            "required": true,
            "maxLength": 36,
            "default": "EspoCRM"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "campaign": {
            "type": "link"
        },
        "parent": {
            "type": "linkParent"
        },
        "object": {
            "type": "linkParent"
        }
    },
    "links": {
