            "entity": "Meeting",
            "foreign": "parent"
        },
        "calls": {
            "type": "hasChildren",
            "entity": "Call",
            "foreign": "parent"
        },
        "tasks": {
            "type": "hasChildren",
            "entity": "Task",
            "foreign": "parent"
        },
        "emails": {
            "type": "hasChildren",
            "entity": "Email",
            "foreign": "parent"
        }
    },
    "collection": {
    	"sortBy": "name",
    	"asc": true,
    	"boolFilters": ["onlyMy"]
    }
