            "type": "duration",
            "start": "dateStart",
            "end": "dateEnd",
            "options": [0, 900, 1800, 3600, 7200, 10800, 86400],
            "default": 3600
        },
        "description": {
            "type": "text"
        },
        "parent": {
            "type": "linkParent"
        },
        "account": {
            "type": "link",
