                    ["accountContact.isInactive", "{direction}"]
                ],
                "leftJoins": [
                    [
                        "AccountContact",
                        "accountContact",
                        {
                            "contact.id:": "accountContact.contactId",
                            "contact.accountId:": "accountContact.accountId",
                            "accountContact.deleted": false
                        }
                    ]
                ]
            },
            "where": {
                "= TRUE": {
                    "leftJoins": [
                        [
                            "AccountContact",
                            "accountContactFilterIsInactive",
                            {
                                "accountContactFilterIsInactive.contactId:": "id",
                                "accountContactFilterIsInactive.accountId:": "accountId",
                                "accountContactFilterIsInactive.deleted": false
                            }
                        ]
                    ],
                    "whereClause": {
                        "accountContactFilterIsInactive.isInactive": true
                    }
                },
                "= FALSE": {
                    "leftJoins": [
                        [
                            "AccountContact",
                            "accountContactFilterIsInactive",
                            {
                                "accountContactFilterIsInactive.contactId:": "id",
                                "accountContactFilterIsInactive.accountId:": "accountId",
                                "accountContactFilterIsInactive.deleted": false
                            }
                        ]
                    ],
                    "whereClause": {
                        "OR": [
                            {
                                "accountContactFilterIsInactive.isInactive!=": true
                            },
                            {
                                "accountContactFilterIsInactive.isInactive=": null
                            }
                        ]
                    }
                }
            },
