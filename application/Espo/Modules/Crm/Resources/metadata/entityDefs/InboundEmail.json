{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true
        },
        "status": {
            "type": "enum",
            "options": ["Active", "Inactive"]
        },
        "serverAddress": {
            "type": "varchar",
            "required": true
        },
        "serverPort": {
            "type": "varchar",
            "default": "143",
            "required": true
        },
        "username": {
            "type": "varchar",
            "required": true
        },
        "password": {
            "type": "password"
        },
        "monitoredFolders": {
            "type": "varchar",
            "required": true,
            "default": "INBOX"
        },
        "trashFolder": {
            "type": "varchar",
            "required": true,
            "default": "TRASH"
        },
        "teams": {
            "type": "linkMultiple"
        },
        "createCase": {
            "type": "bool"
        },
        "caseDistribution": {
            "type": "enum",
            "options": ["Round-Robin", "Least-Busy"]
        },
        "reply": {
            "type": "bool"
        },
        "replyEmailTemplate": {
            "type": "link"
        },
        "replyFromAddress": {
            "type": "varchar"
        },
        "replyFromName": {
            "type": "varchar"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "EntityTeam"
        },
        "replyEmailTemplate": {
            "type": "belongsTo",
            "entity": "EmailTemplate"
        }
    },
    "collection": {
    	"sortBy": "name",
    	"asc": true
    }
}
