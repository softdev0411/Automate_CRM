{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true
        },
        "emailAddress": {
            "type": "varchar",
            "required": true,
            "maxLength": 100,
            "trim": true,
            "view": "EmailAccount.Fields.EmailAddress"
        },
        "status": {
            "type": "enum",
            "options": ["Active", "Inactive"]
        },
        "host": {
            "type": "varchar",
            "required": true
        },
        "port": {
            "type": "varchar",
            "default": "143",
            "required": true
        },
        "ssl": {
            "type": "bool"
        },
        "username": {
            "type": "varchar",
            "required": true
        },
        "password": {
            "type": "password"
        },
        "monitoredFolders": {
            "type": "varchar",
            "required": true,
            "default": "INBOX",
            "view": "EmailAccount.Fields.Folders",
            "tooltip": true
        },
        "sentFolder": {
            "type": "varchar",
            "view": "EmailAccount.Fields.Folder"
        },
        "storeSentEmails": {
            "type": "bool",
            "tooltip": true
        },
        "keepFetchedEmailsUnread": {
            "type": "bool"
        },
        "fetchSince": {
            "type": "date",
            "required": true
        },
        "fetchData": {
            "type": "text",
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "assignedUser": {
            "type": "link",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "filters": {
            "type": "hasChildren",
            "foreign": "parent",
            "entity": "EmailFilter"
        }
    },
    "collection": {
        "sortBy": "name",
        "asc": true
    }
}
